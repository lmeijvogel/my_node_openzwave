{
    "compilerOptions": {
        "outDir": "./out/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2018",
        "strict": false,
        "baseUrl": "./",
        "typeRoots": ["node_modules/@types/", "node_modules/openzwave-shared/types/"],
        "paths": {
            "*": ["node_modules/openzwave-shared/types/*", "*"]
        },
        "lib": ["es2018"],
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "comment": "Re openzwave typing, see https://stackoverflow.com/a/41969123"
}
